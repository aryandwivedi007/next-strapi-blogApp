{
  "kind": "collectionType",
  "collectionName": "comments",
  "info": {
    "singularName": "comment",
    "pluralName": "comments",
    "displayName": "Comment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "content": {
      "type": "string",
      "maxLength": 255
    },
    "blog": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::blog.blog",
      "inversedBy": "comments"
    },
    "guestEmail": {
      "type": "email"
    },
    "IsFeatured": {
      "type": "boolean",
      "default": false
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "comment"
    }
  }
}
